{% extends 'default/sonata_override/sonata_admin_base_layout.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ url('sonata_admin_dashboard') }}">{% trans %}Dashboard{% endtrans %}</a></li>
    <li class="active">Admin Login</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-2">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form class="form-horizontal"  action="/admin/login_check" method="post">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Login</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputEmail3" placeholder="Login" name="_username" value="{{ last_username }}" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="_password" required="required" >
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button id="_submit" type="submit" class="btn btn-default">Sing In</button>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <input  type="hidden" name="_remember_me"  value="on">
            </form>
        </div>
    </div>

{% endblock %}
