{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper">
    {% include 'parts/header.html.twig' %}
    <div class="wrap_12">
            <div class="wrap_content">
                {% include 'parts/menu.html.twig' %}
                <div class="main">
                    <div class="container">
                        <div class="content_head">
                            <div class="h2">Отзывы</div>
                        </div>
                        <div class="content_item content_item8">
                            <div class="scroll-pane">
                                <a href="#myModal4" class="title_block title_block_bord btnModal">Написать отзыв</a>
                                    {% for c in comments %}
                                        <h3>{{ c.person }}</h3>
                                        <p>{{ c.text }}</p>
                                    {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- wrap_12-->
    </div>
    <div class="modal"  id="myModal4" >
        <div class="wrap_modal  wr_modal2">
            <div class="wrap_form wrap_form_modal">
                <div class="title_form">Форма обратной связи</div>
                <form class="form" method="post" action="/comment/create">
                    <input class="input" type="text" maxlength="255" name="name" placeholder="Ваше имя" required="">
                    <input class="input" type="text" maxlength="255" name="email" placeholder="E-mail" required="">
                    <textarea class="textarea" placeholder="Сообщение" name="content"></textarea>
                    <input class="btn-submit" type="submit" value="Отправить">
                </form>
            </div>
        </div>
    </div>
{% endblock %}