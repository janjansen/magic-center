{% extends 'base.html.twig' %}

{% block body %}

<div class="wrapper">
    {% include 'parts/header.html.twig' %}
    <div class="wrap_12">

        <div class="wrap_content">
            {% include 'parts/menu.html.twig' %}
            <div class="main">
                <div class="container">
                    <div class="content_head">
                        <div class="h2">Запись на прием</div>
                    </div>
                    <div class="content_item content_item1">
                        <div class="scroll-pane">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ appointment.content | raw }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    {% include ':parts:alerts.html.twig' %}
                                    <div class="wrapper_form">
                                        <form class="form" method="post" action="/email/fromAppointment">
                                            <input class="input" type="text" maxlength="" name="city" placeholder="Город (населенный пункт)" required="">
                                            <input class="input" type="text" maxlength="" name="name" placeholder="Ваше имя" required="">
                                            <input class="input" type="text" maxlength="" name="email" placeholder="E-mail" required="">
                                            <input class="input" type="text" maxlength="" name="phone" placeholder="Телефон" required="">
                                            <input class="input" type="text" maxlength="" name="types" placeholder="Вид приема (личный или Skype)" required="">
                                            <input class="btn-submit" type="submit" value="Записаться">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div><!--scroll-pane-->
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- wrap_12-->
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
