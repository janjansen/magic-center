{% extends 'base.html.twig' %}

{% block body %}
    {% for c in  comments %}
        <h3>{{ c.person }}</h3>
        {{ c.text }}<br>
        <hr>
    {% endfor %}
    <h1>Добавить</h1>
    {% set errors = app.session.flashbag.get('comment_error')  %}
    {% if errors is not empty %}
        {{ dump(errors) }}
    {% endif %}
    {% set msgs = app.session.flashbag.get('comment_success')  %}
    {% if msgs is not empty %}
        {{ dump(msgs) }}
    {% endif %}
    <form action="/comments/create" method="POST">
        <input type="text" name="person">кто<br>
        <textarea name="text"></textarea>текст<br>
        <input type="submit" value="submit">
    </form>
{% endblock %}

