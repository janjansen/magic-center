{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper">
    {% include 'parts/header.html.twig' %}
    <div class="wrap_12">
        <div class="wrap_content">
            {% include 'parts/menu.html.twig' %}
            <div class="main">
                <div class="container">
                    <div class="content_head">
                        <div class="h2">Мастера центра</div>
                    </div>
                    <div class="content_item content_item6">
                        <div class="scroll-pane">
                            <div class="wrap_basket_block">
                                {% for m in  masters %}
                                    <div class="basket_block less_block  clearfix">
                                        <div class="img_less"><img src="{{ m.webPath }}" alt=""></div>
                                        <div class="descript">
                                            <div class="less_head"><a href="/master/{{ m.id }}">{{ m.name }}</a></div>
                                            <div class="less_text">{{ m.description }}</div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
