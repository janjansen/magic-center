{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper">
        {% include 'parts/header.html.twig' %}
        <div class="wrap_12">
            <div class="wrap_content">
                {% include 'parts/menu.html.twig' %}
                <div class="main">
                    <div class="container">
                        <div class="content_head">
                            <div class="h2">Заявка на запись на курс сформирована</div>
                        </div>
                        <div class="content_item content_item7">
                            <div class="scroll-pane">
                                <div class="wrap_oferta">
                                    <p>
                                        Заявка номер <b>#{{ r.id }}</b> на курс "{{ r.lesson.title }}"  на сумму {{ r.lesson.cost }} руб успешно создана.
                                        Пожалуйста запишите номер вашей заявки.
                                        Для продолжения необходимо перейти к оплате
                                    </p>
                                    <form action="https://demomoney.yandex.ru/eshop.xml" method="post">
                                        <input name="shopId" value="{{ ya_shop_id }}" type="hidden"/>
                                        <input name="scid" value="{{ ya_scid }}" type="hidden"/>
                                        <input name="sum" value="{{ r.lesson.cost }}" type="hidden">
                                        <input name="customerNumber" value="L{{ r.id }}" type="hidden"/>
                                        <input name="paymentType" value="AC" type="hidden"/>
                                        <input name="orderNumber" value=">{{ r.id }}" type="hidden"/>
                                        <input name="custName" value="{{ r.name }}" type="hidden"/>
                                        <input name="custEmail" value="{{ r.email }}" type="hidden"/>
                                        <input name="orderDetails" value="{{ r.lesson.name }}" type="hidden"/>
                                        <input class="btn-submit" type="submit" value="Перейти к оплате"/>
                                    </form>
                                </div>
                            </div><!--scroll-pane-->
                        </div>
                    </div>
                </div>
            </div>
        </div><!--wrap_12-->
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
{% block javascripts %}
    <script src="/js/basket.js"></script>
    <script>
        Cookies.set('basket',[]);
    </script>
{% endblock %}
