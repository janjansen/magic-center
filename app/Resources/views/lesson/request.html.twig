{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper">
        {% include 'parts/header.html.twig' %}
        <div class="wrap_12">
            <div class="wrap_content">
                {% include 'parts/menu.html.twig' %}
                <div class="main">
                    <div class="container">
                        <div class="content_head">
                            <div class="h2">Инициация</div>
                        </div>
                        <div class="content_item content_item9">
                            <div class="scroll-pane">
                                <p style="margin-top: 10px">
                                    Для записи на курс "{{ lesson.title }}" стоимостью <b>{{ lesson.cost }}</b> руб. необходимо заполнить анкету
                                </p>
                                <p>
                                    {{ content.content | raw }}
                                </p>
                                {% set errors = app.session.flashbag.get('lesson_request_error')  %}
                                {% if errors is not empty %}
                                    {% for e in errors %}
                                        <p style="color: red; font-size: 24px">{{ e }}</p>
                                    {% endfor %}
                                {% endif %}
                                <div class="form_ans">
                                    <div class="wrap_anket clearfix">
                                        <form class="form" method="post" action="/lessonRequest/create" enctype="multipart/form-data">
                                            <label class="labelBig">Имя<span class="star">*</span></label>
                                            <input class="input" style="height: 40px" type="text" name="r[name]" maxlength="255" required>

                                            <label class="labelBig">Email<span class="star">*</span></label>
                                            <input class="input" style="height: 40px" type="text" name="r[email]" maxlength="255" required>

                                            <label class="labelBig">Телефон<span class="star">*</span></label>
                                            <input class="input" style="height: 40px" type="text" name="r[phone]" maxlength="255" required>

                                            <label class="labelBig">Город<span class="star">*</span></label>
                                            <input class="input" style="height: 40px" type="text" name="r[city]" maxlength="255" required>

                                            <input type="hidden" name="lid" value="{{ lesson.id }}">

                                            <div class="fileload fileload2 clearfix">
                                                <div class="file-load-block">
                                                    <input type="file" id="file" name="photo" class="inputFile" onchange='document.getElementById("fileName").value=this.value'/>
                                                    <div class="fileLoad">
                                                        <button class="load btn-submit">Загрузить фото <sup>*</sup></button>
                                                    </div>
                                                    <input type="text" class="inputFileVal" readonly="readonly" id="fileName" value="" />
                                                </div>
                                            </div>

                                            <input class="btn-submit" type="submit" value="Отправить">
                                        </form>
                                    </div>
                                    <div class="bottom">
                                        <div class="bottom_text">
                                            {#<sup>*</sup> сноска....#}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- wrap_12-->
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
