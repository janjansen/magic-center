{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper">
        {% include 'parts/header.html.twig' %}
        <div class="wrap_12">
            <div class="wrap_content">
                {% include 'parts/menu.html.twig' %}
                <div class="main">
                    <div class="container">
                        <div class="content_head">
                            <div class="h2">Заказ сформирован</div>
                        </div>
                        <div class="content_item content_item7">
                            <div class="scroll-pane">
                                <div class="wrap_oferta">
                                    <p>Заказ ID {{ order.id }} на сумму {{ order.getAmount }} успешно сформирован.</p>
                                    <form action="https://money.yandex.ru/eshop.xml" method="post">
                                        <input name="shopId" value="{{ ya_shop_id }}" type="hidden"/>
                                        <input name="scid" value="{{ ya_scid }}" type="hidden"/>
                                        <input name="sum" value="{{ order.getAmount }}" type="hidden">
                                        <input name="customerNumber" value="O{{ order.id }}" type="hidden"/>
                                        <input name="paymentType" value="" type="hidden"/>
                                        <input name="orderNumber" value=">O{{ order.id }}" type="hidden"/>
                                        <input name="custName" value="{{ order.lname }} {{ order.fname }}" type="hidden"/>
                                        <input name="custEmail" value="{{ order.email }}" type="hidden"/>
                                        <input class="btn-submit" type="submit" value="Перейти к оплате"/>
                                    </form>
                                </div>
                            </div><!--scroll-pane-->
                        </div>
                    </div>
                </div>
            </div>
        </div><!--wrap_12-->
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
{% block javascripts %}
    <script src="/js/basket.js"></script>
    <script>
        Cookies.set('basket',[]);
    </script>
{% endblock %}
